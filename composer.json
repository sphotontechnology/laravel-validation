{
    "name": "sphoton/validation",
    "description": "Validation for Laravel Framework",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Sphoton\\Validation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "hoangkhacphuc",
            "email": "hoangkhacphuc.dev@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0||^11.0"
    },
    "scripts": {
        "fix": "./vendor/bin/pint -v",
        "test": "./vendor/bin/pest"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "illuminate/validation": "^10.0||^11.0",
        "illuminate/translation": "^10.0||^11.0",
        "pestphp/pest": "3.x-dev"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
